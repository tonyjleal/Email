<!DOCTYPE html>
<html>
<head>
	<%= render 'layouts/head' %>	
</head>
<body>
	<div class="container">
		<% if flash[:noticia] %>
			<div class="row">
				<div class="col-md-10 col-md-offset-2">
					<div class="alert alert-success" role="alert">
						<button type="button" class="close" data-dismiss="alert">
						  <span aria-hidden="true">&times;</span>
						  <span class="sr-only">Close</span>
						</button>
					 	<%= flash[:noticia] %>
					</div>
				</div>
			</div>
		<% end %>
		<% if flash[:error] %>
			<div class="row">
				<div class="col-md-10 col-md-offset-2">
					<div class="alert alert-error" role="alert">
						<button type="button" class="close" data-dismiss="alert">
						  <span aria-hidden="true">&times;</span>
						  <span class="sr-only">Close</span>
						</button>
					 	<%= flash[:error] %>
					</div>
				</div>
			</div>
		<% end %>
		<!-- Cabecera -->
		<%= render 'layouts/cabecera' %>	
		<!-- Fin Cabecera -->


		<!-- Contenido plantilla -->
		<div class="row">
			<div class="col-md-6 col-md-offset-2">
				<%= yield %>
			</div>
		</div>	
		<!-- Fin de Contenido plantilla -->
	</div>
</body>
</html>